# Токен Telegram бота  
BOT_TOKEN=your_bot_token_here

# Подключение к MongoDB
# Для отключения БД (демо режим): disabled
# Для локальной БД: mongodb://localhost:27017  
# Для MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URL=disabled
DATABASE_NAME=emergency_bot

# ID администраторов (через запятую)
# Чтобы узнать свой ID, напишите @userinfobot в Telegram
ADMIN_IDS=123456789,987654321

# OpenAI API ключ (опционально, для ИИ функций)
OPENAI_API_KEY=your_openai_api_key_here

# Настройки логирования
LOG_LEVEL=INFO

# Окружение (development/production)
ENVIRONMENT=development

# Получите API ключ на https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-proj-1234567890abcdefghijklmnopqrstuvwxyz

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=30
BLOCK_DURATION_MINUTES=5 